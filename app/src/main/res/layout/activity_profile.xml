<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileScreen">

    <TextView
        android:id="@+id/text_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BRIJESHKUMAR CHAVDA"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn, Create and Teach"
        android:layout_below="@+id/image_profile"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:textStyle="italic"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_summary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUMMARY :"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:layout_below="@+id/text_name"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_summary_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/text_summary_title"
        android:layout_marginTop="10dp"
        android:text="I'm self-thought android developer. I spend most of the time learning, coding, create project and teaching others." />

    <TextView
        android:id="@+id/text_skill_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SKILLS :"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:layout_below="@+id/text_summary_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_skill_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/text_skill_title"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Android Studio | Dart | Flutter | Figma | Kotlin | Blender" />

    <TextView
        android:id="@+id/text_interested_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INTERESTED :"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:layout_below="@+id/text_skill_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_interested_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/text_interested_title"
        android:layout_marginTop="10dp"
        android:text="Augmented Reality (AR) Development | Google ARCore" />

    <TextView
        android:id="@+id/text_project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROJECTS :"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:layout_below="@+id/text_interested_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_project_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/text_project_title"
        android:layout_marginTop="10dp"
        android:text="TeachAR: TeachAR: Mobile Based Augmented Reality Application to Improve Learning for Students" />

    <TextView
        android:id="@+id/text_reachMeOut_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REACH ME OUT :"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:layout_below="@+id/text_project_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_email_24"
        android:layout_below="@id/text_reachMeOut_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chavdabrijeshkumar25@gamil"
        android:layout_below="@id/text_reachMeOut_title"
        android:layout_toRightOf="@id/icon_email"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/icon_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_phone_android_24"
        android:layout_below="@id/text_email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/text_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 9978320961"
        android:layout_below="@id/text_email"
        android:layout_toRightOf="@id/icon_email"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/button_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_phoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background"
        android:text="RESUME"
        android:textColor="@color/white"
        android:textSize="20sp" />



</RelativeLayout>